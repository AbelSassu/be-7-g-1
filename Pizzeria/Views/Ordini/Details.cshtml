@model List<Pizzeria.Models.Ordini>

@{
    ViewBag.Title = "Storico ordini";
}

<h2 class="my-4">Storico Ordini</h2>

@foreach (var order in Model)
{
    <div>
        <h4>Ordine: @Html.DisplayFor(model => order.Ordine_ID)</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => order.Users.Nome)
            </dt>

            <dd>
                @Html.DisplayFor(model => order.Users.Nome)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => order.Indirizzo)
            </dt>

            <dd>
                @Html.DisplayFor(model => order.Indirizzo)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => order.Note)
            </dt>

            <dd>
                @Html.DisplayFor(model => order.Note)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => order.CostoCons)
            </dt>

            <dd>
                @Html.DisplayFor(model => order.CostoCons, "Costo Consegna")
            </dd>

        </dl>
    </div>
    <div class="mb-5 mt-4">
        <a href="/OrdArts/Details/@order.Ordine_ID" class="btn btn-info">Prodotti acquistati</a>
    </div>

}